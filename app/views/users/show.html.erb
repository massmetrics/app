<div class="well">

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">My Products</h3>
    </div>
    <div class="panel-body">
      <ul class="list-group">
        <% @my_products.each do |product| %>
          <div class="col-xs-12 list-group-item <%= cycle("my-products-light", "my-products-dark") -%>">
            <div class="col-xs-10">
              <li class="list-unstyled"><%= product.product.title %></li>
            </div>
            <div class="col-xs-2">
              <%= link_to product_my_product_path(product.product, product), class: 'btn btn-danger ', method: :delete do %>
                Untrack <span class="glyphicon glyphicon-remove-circle"></span>
              <% end %>
            </div>
          </div>
        <% end %>
      </ul>
    </div>
  </div>
</div>