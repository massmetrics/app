<div class="container">
  <div class="loginbox mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="panel-title">Add a Product</div>
      </div>
      <div class="panel-body login-panel">
        <% if @product.errors.full_messages.length > 0 %>
          <div class="login-alert alert alert-danger col-sm-12">
            <% @product.errors.each do |_, error| %>
              <div><%= error %></div>
            <% end %>
          </div>
        <% end %>
        <% if flash[:notice] %>
          <div class="login-alert alert alert-success col-sm-12">
            <%= flash[:notice] %>
          </div>
        <% end %>
        <%= form_tag({:action => :create}, {:method => :post}) do%>
        <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-qrcode"></i></span>
            <%= text_field_tag :sku, nil,  placeholder: 'Enter SKU from Amazon', class: 'form-control' %>
          </div>

          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-tag"></i></span>
            <%= text_field_tag :category, nil,  placeholder: 'Enter Category', class: 'form-control' %>
          </div>

          <div class="form-group">
            <div class="col-sm-12 controls">
              <%= submit_tag 'Add Product', class: "btn btn-success pull-right" %>
              <% end %>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>
