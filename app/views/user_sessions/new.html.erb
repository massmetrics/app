<div class="container">
  <div class="loginbox mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="panel-title">Sign In</div>
        <div class="forgot-password"><%= link_to 'Forgot Password?', new_password_reset_path %></div>
      </div>
      <div class="panel-body login-panel">
        <% if flash[:alert] %>
          <div class="login-alert alert alert-danger col-sm-12">
            <div><%= flash[:alert] %></div>
          </div>
        <% end %>

        <%= form_for @user, url: {action: 'create'}, class: 'form-horizontal' do |f| %>
          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <%= f.text_field :email, placeholder: 'Email', class: 'form-control' %>
          </div>

          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <%= f.password_field :password, placeholder: 'Password', class: 'form-control' %>
          </div>

          <div class="form-group">
            <div class="col-sm-12 controls">
              <%= f.submit 'Login', class: "btn btn-success pull-right" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
