<div class="container">
  <div class="loginbox mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="panel-title">Suggest a product</div>
      </div>
      <div class="panel-body login-panel">
        <% if @submission.errors.full_messages.length > 0 %>
          <div class="login-alert alert alert-danger col-sm-12">
            <% @submission.errors.each do |_, error| %>
              <div><%= error %></div>
            <% end %>
          </div>
        <% end %>
        <% if flash[:success] %>
          <div class="login-alert alert alert-success col-sm-12">
            <%= flash[:success] %>
          </div>
        <% end %>


        <%= form_for @submission, class: 'form-horizontal' do |f| %>
          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-qrcode"></i></span>
            <%= f.text_field :sku, placeholder: 'Enter SKU from Amazon', class: 'form-control' %>
          </div>

          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-tag"></i></span>
            <%= f.select :category, Category.all.map{|cat| cat.name}, {include_blank: "Select a category"}, class: 'form-control' %>
          </div>

          <div class="form-group">
            <div class="col-sm-6 controls">
              <%= link_to 'Help', about_path({:anchor => "p-suggest"}) %>
            </div>
            <div class="col-sm-6 controls">
              <%= f.submit 'Suggest product', class: "btn btn-success pull-right" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
