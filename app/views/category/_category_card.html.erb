<div class="col-xs-6">
  <div class="brdr bgc-fff pad-10 box-shad btm-mrg-20 category-listing">
    <div class="media">
      <div class="clearfix "></div>
      <div class="fnt-smaller">
        <h4 class="media-heading">
          <%= link_to(product.title.truncate(42), product, class: 'title') %>
        </h4>

        <div class="col-xs-4 category-pricing">
          <%= link_to(image_tag(product.small_image_url, class: "img-responsive"), product) %>
          <ul class="list-inline mrg-0 btm-mrg-10 clr-535353">
            <li>Average: <strong><%= ProductCurrency.format_money(product.average_price) %></strong></li>
            <br/>
            <li>Current: <strong><%= ProductCurrency.format_money(product.current_price) %></strong></li>
            <br/>
            <% if product.percent_discount > 0 %>
              <% percent_style = "text-success" %>
            <% elsif product.percent_discount < 0 %>
              <% percent_style = "text-danger" %>
            <% end %>
            <li>Discount: <strong>
              <span class="<%= percent_style %>"><%= NumberFormatter.format_percentage(product.percent_discount).first %></span>
            </strong></li>
          </ul>
        </div>
        <div class="col-xs-8">
          <%= line_chart(product.price_log_hash(9), {height: "180px", library: {vAxis: {format: '$#,###'}}}) %>
        </div>
      </div>
    </div>
  </div>
</div>