<div class="col-sm-6">

  <!-- Begin Listing: 609 W GRAVERS LN-->
  <div class="brdr bgc-fff pad-10 box-shad btm-mrg-20 property-listing">
    <div class="media">
      <a class="pull-left" href="#" target="_parent">
        <img alt="image" class="img-responsive" src=<%= product.small_image_url %>></a>

      <div class="clearfix visible-sm"></div>

      <div class="media-body fnt-smaller">
        <a href="#" target="_parent"></a>

        <h4 class="media-heading">
          <a href="#" target="_parent"><%= product.title.truncate(45) %>
          </a></h4>

        <div class="col-xs-4 category-pricing">
          <ul class="list-inline mrg-0 btm-mrg-10 clr-535353">
            <li>Average: <%= ProductCurrency.format_money(product.average_price) %></li>
            <br/>
            <li>Current: <%= ProductCurrency.format_money(product.current_price) %></li>
            <br/>
            <li>Discount: <%= NumberFormatter.format_percentage(product.percent_discount).first %></li>
          </ul>
        </div>
        <div class="col-xs-8">
          <%= line_chart(product.price_log_hash, {height: "80px", library: {vAxis: {format: '$#,###'}}}) %>
        </div>
      </div>
    </div>
  </div>
</div>